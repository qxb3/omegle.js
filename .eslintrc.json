{
    "env": {
        "node": true,
        "browser": false,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "linebreak-style": ["error", "unix"],
        "comma-dangle": ["error", "never"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "camelcase": "error"
    }
}
